@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Phiếu nhập kho</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/phieunhap.css" />
    <script src="https://cdn.jsdelivr.net/npm/xlsx@0.18.5/dist/xlsx.full.min.js" defer></script>
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js" ></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js" defer ></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.8/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/modal.css" />
    <style>
        .select2-results__option strong {
            color: #000;
        }

        .select2-results__option small {
            color: #777;
            float: right;
        }

        .select2-results__option {
            padding: 8px 10px !important;
        }

        .hanghoa-item {
            display: flex;
            justify-content: space-between;
            gap: 20px;
            align-items: flex-start;
            width: 100%;
        }

            .hanghoa-item .left-col {
                flex: 1.3;
                min-width: 250px;
            }

            .hanghoa-item .right-col {
                flex: 1;
                font-size: 12px;
                color: #555;
                line-height: 1.3em;
                min-width: 280px;
            }

            .hanghoa-item .tenhang {
                font-size: 14px;
                color: #000;
                margin-bottom: 2px;
            }

            .hanghoa-item .subtext {
                font-size: 12px;
                color: #666;
            }

        /* Khi hover */
        .select2-results__option--highlighted {
            background-color: #eef6ff !important;
            color: #000 !important;
        }

        /* Dropdown rộng hơn */
        .select2-container .select2-dropdown {
            width: auto !important;
            min-width: 600px !important;
            max-width: 900px;
        }

    </style>
</head>
<body>
    <div class="container">
        <!-- Top Filter Bar -->
        <div class="top-bar">
            <div class="top-bar-group">
                <label class="top-bar-label">Kho:</label>
                <select class="top-bar-select">
                </select>
            </div>

            <div class="top-bar-group">
                <label class="top-bar-label">Nguồn nhập/xuất:</label>
                <select class="top-bar-select">
                </select>
            </div>
        </div>

        <!-- Tabs -->
        <div class="tabs">
            <button class="tab active" onclick="switchTab('lapphieu')">
                <i class="fas fa-file-alt"></i> Lập phiếu
            </button>
            <button class="tab" onclick="switchTab('danhsach')">
                <i class="fas fa-list"></i> Danh sách phiếu
            </button>
        </div>

        <!-- Tab Content 1: Lập Phiếu -->
        <div id="lapphieu" class="tab-content active">
            <!-- Form Header -->
            <div class="form-header">
                <div class="form-group">
                    <label class="form-label">Số phiếu: <span style="color: red;">*</span></label>
                    <input type="text" class="form-input" value="Auto" readonly>
                </div>

                <div class="form-group">
                    <label class="form-label">Ngày: <span style="color: red;">*</span></label>
                    <input type="datetime-local" class="form-input" value="2025-11-08T09:58">
                </div>

                <div class="form-group" style="grid-column: span 3 ;">
                    <label class="form-label">Nơi cung cấp: <span style="color: red;">*</span></label>
                    <select class="form-select" name="NoiCungCap">
                        <option>-- Nơi cung cấp --</option>
                    </select>
                </div>

                <div class="form-group">
                    <label class="form-label">Số HĐ:</label>
                    <input type="text" id="soHoaDon" class="form-input" placeholder="Số hóa đơn">
                </div>

                <div class="form-group">
                    <label class="form-label">Ngày HĐ:</label>
                    <input type="date" id="ngayHoaDon" class="form-input">
                </div>

                <div class="form-group" >
                    <label class="form-label">Ký hiệu HĐ:</label>
                    <input type="text" id="kyHieuHoaDon" class="form-input">
                </div>

                <div class="form-group">
                    <label class="form-label">Ghi chú:</label>
                    <input type="text" id="ghiChu" class="form-input">
                </div>
            </div>

            <!-- Table -->
            <div class="table-wrapper">
                <table id="tableChiTiet">
                    <thead>
                        <tr>

                            <th rowspan="2" style="width: 30px;">TT</th>
                            <th rowspan="2" style="width: 250px;     text-align: center; padding-top: 20px;">
                                Tên hàng hóa <div class="form-check form-switch" style="float:right;">
                                    <input class="form-check-input" type="checkbox" id="toggleBHYT">
                                    <label class="form-check-label" for="toggleBHYT">Chỉ BHYT</label>
                                </div>
                            </th>
                            <th rowspan="2" style="width: 60px;">SL nhập</th>
                            <th rowspan="2" style="width: 60px;">ĐVT nhập</th>
                            <th rowspan="2" style="width: 60px;">SL quy đổi</th>
                            <th rowspan="2" style="width: 80px;">Giá nhập</th>
                            <th rowspan="2" style="width: 90px;">Thành tiền</th>
                            <th colspan="2" style="width: 150px; text-align:center;">Chiết khấu</th>
                            <th rowspan="2" style="width: 90px;">VAT</th>
                            <th rowspan="2" style="width: 170px;">Số lô</th>
                            <th rowspan="2" style="width: 90px;">Ngày SX</th>
                            <th rowspan="2" style="width: 90px;">Hạn SD</th>
                            <th rowspan="2" style="width: 100px;">Ghi chú</th>
                            <th rowspan="2"> </th>
                        </tr>
                        <tr>
                            <th style="width: 70px; text-align:center;">%</th>
                            <th style="width: 80px; text-align:center;">Số tiền</th>
                        </tr>
                    </thead>
                    <tbody id="tableBody">
                      
                    </tbody>
                </table>
            </div>

            <!-- Footer Summary -->
            <div class="footer">
                <div class="footer-item">
                    <span class="footer-label">Tổng tiền hàng:</span>
                    <div class="footer-value">0</div>
                </div>
                <div class="footer-item">
                    <span class="footer-label">Tổng chiết khấu:</span>
                    <div class="footer-value">0</div>
                </div>
                <div class="footer-item">
                    <span class="footer-label">Tổng thuế:</span>
                    <div class="footer-value">0</div>
                </div>
                <div class="footer-item">
                    <span class="footer-label">Tổng cộng:</span>
                    <div class="footer-value" style="color: #1976d2; font-weight: 700;">0</div>
                </div>
                <div class="footer-item">
                    <span class="footer-label">Người lập phiếu:</span>
                    <div class="footer-value">Admin</div>
                </div>
            </div>

            <!-- Actions -->
            <div class="actions">
                <button class="btn btn-clear" onclick="clearForm()">Xóa trắng</button>
                <button class="btn btn-save" onclick="savePhieuNhap()">Lưu</button>
            </div>
        </div>

        <!-- Tab Content 2: Danh Sách Phiếu -->
        <div id="danhsach" class="tab-content">
            <div class="list-header" >

                <div class="filter" style="display: grid; gap: 10px;
    grid-template-columns: repeat(4, 1fr);">
                    <div class="filter-group">
                        <label class="filter-label">Từ ngày:</label>
                        <input type="date" class="filter-input" value="2025-11-08">
                    </div>
                    <div class="filter-group">
                        <label class="filter-label">Đến ngày:</label>
                        <input type="date" class="filter-input" value="2025-11-08">
                    </div>
                    <div class="filter-group" style="grid-column: span 2;">
                        <label class="filter-label">Nơi cung cấp:</label>
                    <select class="filter-select" name="NoiCungCap2">
                            <option>-- Nơi cung cấp --</option>
                        </select>
                    </div>
                </div>
          
                <div class="filter" style="gap: 10px; display:flex; padding:5px;">
                    <div class="filter-group" style="min-width:40%;">
                        <label class="filter-label">Hàng hóa:</label>
                        <select class="filter-select" style="  width: 400px;" id="filterHangHoa">
                        </select>
                    </div>
                    <div class="filter-group">
                        <label class="filter-label">Số phiếu:</label>
                        <input type="text" class="filter-input" placeholder="Số phiếu">
                    </div>
                    <div class="filter-group">
                        <label class="filter-label">Số HĐ:</label>
                        <input type="text" class="filter-input" placeholder="Số hóa đơn">
                    </div>
                    <button class="btn-search-icon">
                        <i class="fas fa-search"></i>
                    </button>
                </div>
            </div>

            <div class="list-table">
                <table id="tableDanhSachPhieu">
                    <thead>
                        <tr>
                            <th style="width: 30px;">#</th>
                            <th style="width: 120px;">Số hóa đơn</th>
                            <th style="width: 120px;">Ngày hóa đơn</th>
                            <th style="width: 140px;">Ngày nhập</th>
                            <th style="width: 150px;">Nhà CC</th>
                            <th style="width: 80px;">∑ Hàng</th>
                            <th style="width: 80px;">∑ CK</th>
                            <th style="width: 80px;">∑ VAT</th>
                            <th style="width: 100px;">∑ Tổng</th>
                            <th style="width: 100px;">Người lập</th>
                            <th style="width: 120px;">Số phiếu</th>
                            <th style="width: 120px;">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody id="tbodyPhieuNhap">
            
                
                    </tbody>
                </table>
            </div>
        </div>
        <div class="modal-overlay" id="notifyOverlay" style="display:none">
            <div class="modal-phieu" style="max-width:400px;">
                <div class="modal-header">
                    <h2 class="modal-title" id="notifyTitle">Thông báo</h2>
                    <button class="close-btn" onclick="closeNotifyModal()">&times;</button>
                </div>
                <div class="modal-body">
                    <p id="notifyMessage">...</p>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-primary" onclick="closeNotifyModal()">Đóng</button>
                </div>
            </div>
        </div>
    </div>
   
    <script>
        const nhaCungCapData = @Html.Raw(ViewBag.NhaCungCapJson ?? "[]");
        const hangHoaData = @Html.Raw(ViewBag.HangHoaJson ?? "[]");
        let rowIndex = 0;
        let chiChonBHYT = false;
        var phieuNhapData = @Html.Raw(ViewBag.PhieuNhapJson);
        document.addEventListener("DOMContentLoaded", function () {

            var success = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(TempData["Success"]));
            var error = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(TempData["Error"]));

            if (success) { showSuccess(success); }
            if (error) { showError(error); }
        });
    </script>
    <script src="~/js/modal.js"></script>
    <script src="~/js/phieunhap.js"></script>
</body>
</html>